@model List<routine>

@{
    ViewData["Title"] = "Manage Routine";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Manage Routine</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #ffffff;
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            height: 100vh;
            overflow: hidden;
        }

        .left-navbar {
            width: 250px;
            height: 100vh;
            background-color: black;
            color: white;
            padding: 20px;
            text-align: center;
            position: fixed;
            left: 0;
            top: 0;
            bottom: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

            .left-navbar h4 {
                margin-bottom: 20px;
                border-bottom: 2px solid white;
                padding-bottom: 10px;
                font-size: 22px;
            }

        .nav-link {
            color: white;
            display: block;
            padding: 12px;
            width: 100%;
            text-align: left;
            text-decoration: none;
            transition: 0.3s;
            border-radius: 5px;
        }

            .nav-link:hover {
                background-color: #333;
                padding-left: 15px;
            }

        .content {
            flex: 1;
            margin-left: 270px;
            padding: 40px;
            color: black;
        }

        .cool-box {
            background-color: rgba(0, 0, 0, 0.05);
            padding: 20px;
            border-radius: 10px;
            text-align: center;
            margin-top: 30px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

            .cool-box h2 {
                color: #333;
            }

            .cool-box p {
                font-size: 18px;
                color: #555;
            }
    </style>
</head>
<body>

    <!-- Sidebar Navbar (Fixed Left) -->
    <div class="left-navbar">
        <h4>Navigation</h4>
        <a href="/CrudTable/AddPaymentforStudent" class="nav-link">Add Payment</a>
        <a href="/Routine/ManageRoutine" class="nav-link">📅Student Routine</a>
        <a href="/CrudTable/AddDept" class="nav-link">AddDept</a>
        <a href="/CrudTable/DepartmentList" class="nav-link">DepartmentList</a>
        <a href="/User/nextPage?UserListnow=Student" class="nav-link"><< Back</a>
        <a href="/User/Student" class="nav-link"><< Back To List</a>
    </div>

    <!-- Main Content -->
    <div class="content">
        <h2>Manage Routine</h2>

        <p>
            <a asp-action="UploadRoutine" asp-controller="Routine" class="btn btn-primary">Upload New Routine</a>
        </p>

        <table class="table">
            <thead>
                <tr>
                    <th>Department</th>
                    <th>Semester</th>
                    <th>File Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.dept</td>
                        <td>@item.semester</td>
                        <td>@item.FileName</td>
                        <td>
                            <a href="/@item.FilePath" target="_blank" class="btn btn-info">View</a>
                            <a asp-action="DeleteRoutine" asp-route-id="@item.id" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>