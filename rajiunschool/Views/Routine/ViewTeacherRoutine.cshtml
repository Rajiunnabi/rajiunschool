@model rajiunschool.Models.TeacherRoutine

@{
    ViewData["Title"] = "View Teacher Routine";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>View Teacher Routine</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #ffffff;
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            height: 100vh;
            overflow: hidden;
        }

        .left-navbar {
            width: 250px;
            height: 100vh;
            background-color: black;
            color: white;
            padding: 20px;
            text-align: center;
            position: fixed;
            left: 0;
            top: 0;
            bottom: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

            .left-navbar h4 {
                margin-bottom: 20px;
                border-bottom: 2px solid white;
                padding-bottom: 10px;
                font-size: 22px;
            }

        .nav-link {
            color: white;
            display: block;
            padding: 12px;
            width: 100%;
            text-align: left;
            text-decoration: none;
            transition: 0.3s;
            border-radius: 5px;
        }

            .nav-link:hover {
                background-color: #333;
                padding-left: 15px;
            }

        .logout-button {
            position: fixed;
            top: 20px;
            right: 20px;
            background-color: red;
            color: white;
            border: none;
            padding: 12px 18px;
            cursor: pointer;
            border-radius: 30px;
            font-size: 14px;
            text-decoration: none;
            font-weight: bold;
            transition: 0.3s;
            z-index: 1000;
        }

        .content {
            flex: 1;
            margin-left: 270px;
            padding: 40px;
            color: black;
        }
    </style>
</head>
<body>

    <!-- Logout Button -->
    <a href="@Url.Action("Logout", "Auth")" class="logout-button">Logout</a>

    <!-- Sidebar Navbar (Fixed Left) -->
    <div class="left-navbar">
        <h4>Teacher Panel</h4>
        <a href="@Url.Action("Profile", "User")" class="nav-link">Profile</a>
        <a href="@Url.Action("EditProfileEmployee", "User")" class="nav-link">Edit Profile</a>
        <a href="/CrudTable/CourseReview" class="nav-link">Course Review</a>
        <a href="/Result/CourseView" class="nav-link">View My Subjects</a>
        <a href="/Result/ViewFailedStudent" class="nav-link">View Failed Students</a>
        <a href="/CrudTable/SeeSubjectListForTeacher" class="nav-link">See Available Subjects</a>
        <a href="/CrudTable/ViewEvaluation" class="nav-link">Evaluation</a>
        <a href="/Routine/ViewTeacherRoutine" class="nav-link">See Routine</a>
        <a href="/Dashboard/TeacherDashboard" class="nav-link"><< Back</a>
    </div>

    <!-- Main Content -->
    <div class="content">
        <h2>Your Routine</h2>

        @if (Model != null)
        {
            <p>
                <strong>Teacher Username:</strong> @Model.TeacherUsername <br />
                <strong>Department:</strong> @Model.Department <br />
            </p>
            <a href="/@Model.FilePath" target="_blank" class="btn btn-primary">View Routine (PDF)</a>
        }
        else
        {
            <p class="text-danger">No routine available for your department.</p>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>