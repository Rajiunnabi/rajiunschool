@model List<users>

@{
    String UserListnow = ViewData["UserListnow"] as string;
    bool showButton = (UserListnow == "Teacher" || UserListnow == "Student"); // Show button for Teacher & Student
}

<style>
    .active {
        color: green;
        font-weight: bold;
    }

    .inactive {
        color: red;
        font-weight: bold;
    }
    .container {
        margin-top: 50px;
        position: relative;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        padding: 10px;
        border: 1px solid #ddd;
        text-align: center;
    }

    th {
        background-color: #007bff;
        color: white;
    }

    .btn-danger, .btn-primary {
        padding: 5px 10px;
        text-decoration: none;
        color: white;
        border-radius: 5px;
    }

    .btn-danger {
        background-color: red;
    }

    .btn-primary {
        background-color: #007bff;
    }

    .search-container {
        display: flex;
        justify-content: space-between;
        margin-bottom: 20px;
    }

    .search-input {
        width: 300px;
        padding: 8px;
        border: 1px solid #ddd;
        border-radius: 5px;
    }

    .search-button {
        padding: 8px 15px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

        .search-button:hover {
            background-color: #0056b3;
        }

    .reset-button {
        padding: 8px 15px;
        background-color: gray;
        color: white;
        border: none;
        border-radius: 5px;
        text-decoration: none;
        margin-left: 10px;
    }

        .reset-button:hover {
            background-color: darkgray;
        }

    .next-page-container {
        position: absolute;
        top: 0;
        right: 0;
        margin: 10px;
    }

    .next-page-button {
        padding: 10px 20px;
        background-color: #28a745;
        color: white;
        border: none;
        border-radius: 5px;
        text-decoration: none;
        font-size: 16px;
        cursor: pointer;
    }

        .next-page-button:hover {
            background-color: #218838;
        }
</style>

<div class="container">
    <h2 class="text-center mb-4">Manage Students</h2>

    @if (showButton)
    {
        <div class="next-page-container">
            <a href="@Url.Action("nextPage", "User", new { UserListnow = UserListnow })" class="next-page-button">Go to Next Page</a>
        </div>
    }

    <!-- Search Bar (For Students, Teachers, Bankers, Librarians, and Others) -->
    @if (UserListnow == "Student" || UserListnow == "Teacher" || UserListnow == "Banker" || UserListnow == "Libarian" || UserListnow == "Others")
    {
        <div class="search-container">
            <form method="get" action="@Url.Action(UserListnow, "User")">
                <input type="text" name="searchQuery" class="search-input" placeholder="Search by @UserListnow ID or Username" />
                <button type="submit" class="search-button">Search</button>
                <a href="@Url.Action(UserListnow, "User")" class="reset-button">Reset</a>
            </form>
        </div>
    }

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Username</th>
                <th>Role</th>
                <th>Current Status</th>
                <th>Profile</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                if (user.role.Equals(UserListnow))
                {
                    <tr>
                        <td>@user.id</td>
                        <td>@user.username</td>
                        <td>@user.role</td>
                        <td>
                            <a href="@Url.Action("Details", "User", new { id = user.id })" class="btn btn-primary">View Profile</a>
                        </td>
						<td>
							@if (user.running == 0)
							{
								<span class="active">Active</span>
							}
							else
							{
								<span class="inactive">Inactive</span>
							}
						</td>
                        <td>
                            <a href="@Url.Action("ChangeStatus", "User", new { id = user.id , role = UserListnow })" class="btn btn-primary">Change</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
