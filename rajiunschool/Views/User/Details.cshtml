@model users

@{
    ViewData["Title"] = "User Profile";
    string defaultImage = Url.Content("~/images/default-avatar.png"); // Default image path
    string profileImage = string.IsNullOrEmpty(Model.ProfilePicture) ? defaultImage : Url.Content(Model.ProfilePicture);
}

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    body {
        background-color: #f4f4f4;
        font-family: 'Arial', sans-serif;
    }

    .profile-container {
        max-width: 600px;
        margin: 50px auto;
        background: white;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    .profile-picture {
        width: 180px; 
        height: 180px; 
        border-radius: 50%;
        object-fit: cover;
        border: 4px solid #007bff;
        margin-bottom: 20px;
    }

    .profile-info {
        font-size: 18px;
        color: #444;
        text-align: left;
        margin-top: 20px;
    }

        .profile-info p {
            background: #f8f9fa;
            padding: 10px;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            margin-bottom: 10px;
        }

    .btn-back {
        margin-top: 20px;
        width: 100%;
    }
</style>

<div class="profile-container">
    
    <img src="@profileImage" class="profile-picture" alt="Profile Picture">

    <h2 class="mt-2">@Model.username</h2>
    <p class="text-muted">@Model.role</p>

    <div class="profile-info">
        <p><strong>ID:</strong> @Model.id</p>
        <p><strong>Username:</strong> @Model.username</p>
        <p><strong>Role:</strong> @Model.role</p>
    </div>

    <a href="javascript:history.back()" class="btn btn-outline-primary btn-back">⬅ Back</a>
</div>
