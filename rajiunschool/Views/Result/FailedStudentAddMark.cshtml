@model failedcoursemark

@{
    ViewData["Title"] = "Enter Student Marks";
}

<h2>Enter Student Marks</h2>

<form asp-action="FailedStudentAddMarkAdd" asp-controller="Result" method="post">
    <table class="table table-bordered text-center">
        <thead>
            <tr>
                <th>Subject ID</th>
                <th>Student ID</th>
                <th>Quiz 1</th>
                <th>Quiz 2</th>
                <th>Quiz 3</th>
                <th>Quiz 4</th>
                <th>Attendance</th>
                <th>Final Exam</th>
                <th>Session</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <!-- Hidden field for teacherid -->
                <!-- Subject ID -->
                <td><input type="number" class="form-control" asp-for="subjectid" required /></td>

                <!-- Student ID -->
                <td><input type="number" class="form-control" asp-for="studentid" required /></td>

                <!-- Quiz 1 -->
                <td><input type="number" class="form-control" asp-for="quiz1" required /></td>

                <!-- Quiz 2 -->
                <td><input type="number" class="form-control" asp-for="quiz2" required /></td>

                <!-- Quiz 3 -->
                <td><input type="number" class="form-control" asp-for="quiz3" required /></td>

                <!-- Quiz 4 -->
                <td><input type="number" class="form-control" asp-for="quiz4" required /></td>

                <!-- Attendance -->
                <td><input type="number" class="form-control" asp-for="attendance" required /></td>

                <!-- Final Exam -->
                <td><input type="number" class="form-control" asp-for="final" required /></td>

                <!-- Session -->
                <td><input type="text" class="form-control" asp-for="session" required /></td>
                <td><input type="hidden" class="form-control" asp-for="teacherid" /></td>
            </tr>
        </tbody>
    </table>
    <button type="submit" class="btn btn-primary">Calculate & Save</button>
</form>

@if (Model != null)
{
    <h3 class="mt-4">All Student Marks</h3>
    <table class="table table-bordered text-center">
        <thead>
            <tr>
                <th>Subject ID</th>
                <th>Student ID</th>
                <th>Quiz 1</th>
                <th>Quiz 2</th>
                <th>Quiz 3</th>
                <th>Quiz 4</th>
                <th>Attendance</th>
                <th>Final Exam</th>
                <th>Total Marks</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.subjectid</td>
                <td>@Model.studentid</td>
                <td>@Model.quiz1</td>
                <td>@Model.quiz2</td>
                <td>@Model.quiz3</td>
                <td>@Model.quiz4</td>
                <td>@Model.attendance</td>
                <td>@Model.final</td>
                <td class="fw-bold text-success">@Model.totalmarks</td>
            </tr>
        </tbody>
    </table>
}