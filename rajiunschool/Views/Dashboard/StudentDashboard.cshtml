@{
    ViewData["Title"] = "Student Dashboard";
}

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    body {
        background-color: #ffffff;
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
        display: flex;
        height: 100vh;
        overflow: hidden;
    }

    .left-navbar {
        width: 250px;
        height: 100vh;
        background-color: black;
        color: white;
        padding: 20px;
        text-align: center;
        position: fixed;
        left: 0;
        top: 0;
        bottom: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

        .left-navbar h4 {
            margin-bottom: 20px;
            border-bottom: 2px solid white;
            padding-bottom: 10px;
            font-size: 22px;
        }

    .nav-link {
        color: white;
        display: block;
        padding: 12px;
        width: 100%;
        text-align: left;
        text-decoration: none;
        transition: 0.3s;
        border-radius: 5px;
    }

        .nav-link:hover {
            background-color: #333;
            padding-left: 15px;
        }

    .logout-button {
        position: absolute;
        top: 20px;
        right: 20px;
        background-color: red;
        color: white;
        border: none;
        padding: 12px 18px;
        cursor: pointer;
        border-radius: 30px;
        font-size: 14px;
        text-decoration: none;
        font-weight: bold;
        transition: 0.3s;
    }

    /* Main Content */
    .content {
        flex: 1;
        margin-left: 270px;
        padding: 40px;
        color: black;
    }

    .dashboard-box {
        background-color: rgba(0, 0, 0, 0.05);
        padding: 20px;
        border-radius: 10px;
        text-align: center;
        margin-top: 30px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

        .dashboard-box h2 {
            color: #333;
        }

        .dashboard-box p {
            font-size: 18px;
            color: #555;
        }
</style>

<!-- Logout Button -->
<a href="@Url.Action("Logout", "Auth")" class="logout-button">Logout</a>

<div class="left-navbar">
    <h4>Student Panel</h4>
    <a href="@Url.Action("Profile", "User")" class="nav-link">Profile</a>
    <a href="@Url.Action("EditProfileStudent", "User")" class="nav-link">Edit Profile</a>
    <a href="@Url.Action("StudentResult", "Result")" class="nav-link">Result</a>
    <a href="/CrudTable/ViewPayment" class="nav-link">Payments</a>
    <a href="/CrudTable/TeacherEvaluation" class="nav-link">Teacher Evaluation</a>
    <a href="/Routine/ViewStudentRoutine" class="nav-link">See Routine</a>
    <a href="/Dashboard/StudentDashboard" class="nav-link"><< Back</a>
</div>
