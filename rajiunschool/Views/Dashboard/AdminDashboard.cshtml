@{
    ViewData["Title"] = "Admin Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f4f4f4;
            font-family: Arial, sans-serif;
        }
        /* Sidebar */
        .sidebar {
            height: 100vh; /* Full height without gaps */
            width: 250px;
            position: fixed;
            top: 0;
            left: 0;
            background-color: #212529; /* Black color */
            padding-top: 20px;
            overflow-y: auto;
        }

            .sidebar a {
                display: block;
                color: white;
                padding: 15px;
                text-decoration: none;
                font-size: 18px;
                border-radius: 5px;
            }

                .sidebar a:hover {
                    background-color: #343a40; /* Dark gray */
                }
        /* Main Content */
        .content {
            margin-left: 270px;
            padding: 20px;
        }
        /* Logout Button */
        .logout-btn {
            position: absolute;
            right: 20px;
            top: 10px;
        }
    </style>
</head>
<body>

    <!-- Sidebar Navbar (Fixed Left) -->
    <div class="sidebar">
        <h3 class="text-center text-white">Admin Panel</h3>
        <a href="/Dashboard/AdminDashboard">🏠 Dashboard</a>
        <a href="/User/Student">📚 Manage Students</a>
        <a href="/User/Teacher">👨‍🏫 Manage Teachers</a>
        <a href="/User/Libarian">👨‍🏫 Manage Libarian</a>
        <a href="/User/Banker">👨‍🏫 Manage Banker</a>
        <a href="/User/Others">👨‍🏫 Manage Others</a>
        <a href="/CrudTable/AddUser">👥 Add Users</a>
    </div>

    <!-- Logout Button (Top-Right) -->
    <a href="/Auth/Logout" class="btn btn-danger logout-btn">Logout</a>

    <!-- Main Content -->
    <div class="content">
        <h2>Welcome, Admin!</h2>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
