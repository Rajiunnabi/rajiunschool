<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Add New Session</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: #f4f4f4;
            font-family: Arial, sans-serif;
        }
        /* Sidebar */
        .sidebar {
            height: 100vh; /* Full height without gaps */
            width: 250px;
            position: fixed;
            top: 0;
            left: 0;
            background-color: #212529; /* Black color */
            padding-top: 20px;
            overflow-y: auto;
        }

            .sidebar a {
                display: block;
                color: white;
                padding: 15px;
                text-decoration: none;
                font-size: 18px;
                border-radius: 5px;
            }

                .sidebar a:hover {
                    background-color: #343a40; /* Dark gray */
                }
        /* Main Content */
        .content {
            margin-left: 270px;
            padding: 20px;
        }
        /* Logout Button */
        .logout-btn {
            position: fixed;
            right: 20px;
            top: 10px;
            z-index: 1000;
        }

        .form-container {
            max-width: 500px;
            margin: 50px auto;
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .form-control {
            border-radius: 5px;
        }

        .btn-success {
            width: 100%;
            border-radius: 5px;
        }

        .alert-success, .alert-danger {
            text-align: center;
        }
    </style>
</head>
<body>

    <!-- Sidebar Navbar (Fixed Left) -->
    <div class="sidebar">
        <h3 class="text-center text-white">Admin Panel</h3>
        <a href="/Dashboard/AdminDashboard">🏠 Dashboard</a>
        <a href="/User/Student">📚 Manage Students</a>
        <a href="/User/Teacher">👨‍🏫 Manage Teachers</a>
        <a href="/User/Libarian">👨‍🏫 Manage Libarian</a>
        <a href="/User/Banker">👨‍🏫 Manage Banker</a>
        <a href="/User/Others">👨‍🏫 Manage Others</a>
        <a href="/CrudTable/AddUser">👥 Add Users</a>
        <a href="/Session/AddNewSession">👥 Add Session</a>
        <a href="/Dashboard/AdminDashboard"><< Back</a>
    </div>

    <!-- Logout Button (Top-Right) -->
    <a href="/Auth/Logout" class="btn btn-danger logout-btn">Logout</a>

    <!-- Main Content -->
    <div class="content">
        <div class="container">
            <div class="form-container">
                <h3 class="text-center mb-4">Session</h3>

                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-success">@ViewBag.Message</div>
                }
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger">@ViewBag.Error</div>
                }

                <form asp-action="AddNewSessionOperation" asp-controller="Session" method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label class="form-label">Details</label>
                        <input type="text" name="newsession" class="form-control" placeholder="Enter New Semester Name" required>
                    </div>

                    <button type="submit" class="btn btn-success">Add</button>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>