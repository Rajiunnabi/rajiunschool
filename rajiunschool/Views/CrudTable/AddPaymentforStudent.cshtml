

@{
    ViewData["Title"] = "Add Payment";
}

<style>
    body {
        background: #f4f4f4;
    }

    .form-container {
        max-width: 500px;
        margin: 50px auto;
        background: white;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .form-control {
        border-radius: 5px;
    }

    .btn-success {
        width: 100%;
        border-radius: 5px;
    }

    .alert-success, .alert-danger {
        text-align: center;
    }
</style>

<div class="container">
    <div class="form-container">
        <h3 class="text-center mb-4">Add New User</h3>

        @if (ViewBag.Message != null)
        {
            <div class="alert alert-success">@ViewBag.Message</div>
        }
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }

        <form asp-action="AddPaymentforStudent" asp-controller="CrudTable" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label">Admission Fee</label>
                <input type="number" name="admissionfee" class="form-control" placeholder="Admission Fee" required>
            </div>

            <div class="mb-3">
                <label class="form-label">Tution Fee</label>
                <input type="number" name="tutionfee" class="form-control" placeholder="Tution Fee" required>
            </div>

            <div class="mb-3">
                <label class="form-label">Transportation Fee</label>
                <input type="number" name="transportationfee" class="form-control" placeholder="Transportation Fee" required>
            </div>

            <div class="mb-3">
                <label class="form-label">Department</label>
                <input type="text" name="department" class="form-control" placeholder="Department" required>
            </div>



            <button type="submit" class="btn btn-success">Add Payment</button>
        </form>
    </div>
</div>
