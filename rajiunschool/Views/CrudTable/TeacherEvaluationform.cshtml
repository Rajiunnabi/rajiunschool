                {
                    <div class="alert alert-success">@ViewBag.Message</div>
                }
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger">@ViewBag.Error</div>
                }

                <form asp-action="TeacherEvaluationformadd" asp-controller="CrudTable" method="post" enctype="multipart/form-data">
                    <!-- Hidden fields for model properties with values -->
                    <input type="hidden" asp-for="subjectid" value="@Model.subjectid" />
                    <input type="hidden" asp-for="subjectname" value="@Model.subjectname" />
                    <input type="hidden" asp-for="teachername" value="@Model.teachername" />
                    <input type="hidden" asp-for="teacherid" value="@Model.teacherid" />

                    <div class="mb-3">
                        <label class="form-label">Details</label>
                        <input type="text" name="Details" class="form-control" placeholder="Enter Your Details About The Teacher" required>
                    </div>

                    <button type="submit" class="btn btn-success">Evaluate</button>
                </form>
    </div>
</div>