@model List<department>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Department List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #ffffff;
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            height: 100vh;
            overflow: hidden;
        }

        .left-navbar {
            width: 250px;
            height: 100vh;
            background-color: black;
            color: white;
            padding: 20px;
            text-align: center;
            position: fixed;
            left: 0;
            top: 0;
            bottom: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

            .left-navbar h4 {
                margin-bottom: 20px;
                border-bottom: 2px solid white;
                padding-bottom: 10px;
                font-size: 22px;
            }

        .nav-link {
            color: white;
            display: block;
            padding: 12px;
            width: 100%;
            text-align: left;
            text-decoration: none;
            transition: 0.3s;
            border-radius: 5px;
        }

            .nav-link:hover {
                background-color: #333;
                padding-left: 15px;
            }

        .content {
            flex: 1;
            margin-left: 270px;
            padding: 40px;
            color: black;
        }

        .container {
            margin-top: 50px;
            position: relative;
        }

        .top-right-btn {
            position: absolute;
            top: 0;
            right: 0;
            margin: 10px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 10px;
            border: 1px solid #ddd;
            text-align: center;
        }

        th {
            background-color: #007bff;
            color: white;
        }

        .btn-danger, .btn-primary {
            padding: 5px 10px;
            text-decoration: none;
            color: white;
            border-radius: 5px;
        }

        .btn-danger {
            background-color: red;
        }

        .btn-primary {
            background-color: #007bff;
        }

        .search-container {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
        }

        .search-input {
            width: 300px;
            padding: 8px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

        .search-button {
            padding: 8px 15px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            .search-button:hover {
                background-color: #0056b3;
            }

        .reset-button {
            padding: 8px 15px;
            background-color: gray;
            color: white;
            border: none;
            border-radius: 5px;
            text-decoration: none;
            margin-left: 10px;
        }

            .reset-button:hover {
                background-color: darkgray;
            }
    </style>
</head>
<body>

    <!-- Sidebar Navbar (Fixed Left) -->
    <div class="left-navbar">
        <h4>Navigation</h4>
        <a href="/CrudTable/AddPaymentforStudent" class="nav-link">Add Payment</a>
        <a href="/Routine/ManageRoutine" class="nav-link">📅Student Routine</a>
        <a href="/CrudTable/AddDept" class="nav-link">AddDept</a>
        <a href="/CrudTable/DepartmentList" class="nav-link">DepartmentList</a>
        <a href="/User/nextPage?UserListnow=Student" class="nav-link"><< Back</a>
        <a href="/User/Student" class="nav-link"><< Back To List</a>
    </div>

    <!-- Main Content -->
    <div class="content">
        <div class="container">
            <h2 class="text-center mb-4">Subject List</h2>

            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Subject ID</th>
                        <th>Subject Name</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var dept in Model)
                    {
                        <tr>
                            <td>@dept.id</td>
                            <td>@dept.name</td>
                            <td>
                                <a href="@Url.Action("DeleteDept", "CrudTable", new { id = dept.id})" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>