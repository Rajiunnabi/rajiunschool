@model currentcoursemark

@{
    ViewData["Title"] = "Enter Student Marks";
}

<h2>Enter Student Marks</h2>

<form asp-action="StudentAddMarkAdd" asp-controller="Result" method="post">
    <!-- Hidden field for teacherid -->
    <input type="hidden" asp-for="teacherid" />

    <div class="mb-3">
        <label class="form-label">Subject ID</label>
        <input type="number" class="form-control" asp-for="subjectid" placeholder="Enter Subject ID" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Student ID</label>
        <input type="number" class="form-control" asp-for="studentid" placeholder="Enter Student ID" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Quiz 1</label>
        <input type="number" class="form-control" asp-for="quiz1" placeholder="Enter Quiz 1 Marks" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Quiz 2</label>
        <input type="number" class="form-control" asp-for="quiz2" placeholder="Enter Quiz 2 Marks" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Quiz 3</label>
        <input type="number" class="form-control" asp-for="quiz3" placeholder="Enter Quiz 3 Marks" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Quiz 4</label>
        <input type="number" class="form-control" asp-for="quiz4" placeholder="Enter Quiz 4 Marks" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Attendance</label>
        <input type="number" class="form-control" asp-for="attendance" placeholder="Enter Attendance Marks" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Final Exam</label>
        <input type="number" class="form-control" asp-for="final" placeholder="Enter Final Exam Marks" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Session</label>
        <input type="text" class="form-control" asp-for="session" placeholder="Enter Session" required />
    </div>

    <button type="submit" class="btn btn-primary">Calculate & Save</button>
</form>

@if (Model != null)
{
    <h3 class="mt-4">All Student Marks</h3>
    <table class="table table-bordered text-center">
        <thead>
            <tr>
                <th>Student ID</th>
                <th>Quiz 1</th>
                <th>Quiz 2</th>
                <th>Quiz 3</th>
                <th>Quiz 4</th>
                <th>Attendance</th>
                <th>Final Exam</th>
                <th>Total Marks</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.studentid</td>
                <td>@Model.quiz1</td>
                <td>@Model.quiz2</td>
                <td>@Model.quiz3</td>
                <td>@Model.quiz4</td>
                <td>@Model.attendance</td>
                <td>@Model.final</td>
                <td class="fw-bold text-success">@Model.totalmarks</td>
            </tr>
        </tbody>
    </table>
}