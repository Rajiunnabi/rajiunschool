@model List<subjectlist>

<style>
    .container {
        margin-top: 50px;
        position: relative;
    }

    .top-right-btn {
        position: absolute;
        top: 0;
        right: 0;
        margin: 10px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        padding: 10px;
        border: 1px solid #ddd;
        text-align: center;
    }

    th {
        background-color: #007bff;
        color: white;
    }

    .btn-danger, .btn-primary {
        padding: 5px 10px;
        text-decoration: none;
        color: white;
        border-radius: 5px;
    }

    .btn-danger {
        background-color: red;
    }

    .btn-primary {
        background-color: #007bff;
    }

    .search-container {
        display: flex;
        justify-content: space-between;
        margin-bottom: 20px;
    }

    .search-input {
        width: 300px;
        padding: 8px;
        border: 1px solid #ddd;
        border-radius: 5px;
    }

    .search-button {
        padding: 8px 15px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

        .search-button:hover {
            background-color: #0056b3;
        }

    .reset-button {
        padding: 8px 15px;
        background-color: gray;
        color: white;
        border: none;
        border-radius: 5px;
        text-decoration: none;
        margin-left: 10px;
    }

        .reset-button:hover {
            background-color: darkgray;
        }
</style>

<div class="container">
    <h2 class="text-center mb-4">Subject List</h2>

    <!-- Search Bar -->
    <div class="search-container">
        <form method="get" action="@Url.Action("SubjectList", "CrudTable")">
            <input type="text" name="searchQuery" class="search-input" placeholder="Search by Subject ID or Name" />
            <button type="submit" class="search-button">Search</button>
            <a href="@Url.Action("SubjectList", "CrudTable")" class="reset-button">Reset</a>
        </form>
    </div>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Subject ID</th>
                <th>Subject Name</th>
                <th>Department</th>
                <th>Semester</th>
                <th>Instructor</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var subjectlist in Model)
            {
                <tr>
                    <td>@subjectlist.id</td>
                    <td>@subjectlist.subjectname</td>
                    <td>@subjectlist.dept</td>
                    <td>@subjectlist.semester</td>
                    <td>
                        @if (subjectlist.instructor == null)
                        {
                            @:NA
                        }
                        else
                        {
                            @subjectlist.instructor
                        }
                    </td>
                    <td>
                        <a href="@Url.Action("DeleteSubject", "CrudTable", new { id = subjectlist.id})" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
