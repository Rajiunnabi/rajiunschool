@{
    ViewData["Title"] = "Dept Add";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Dept Add</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #ffffff;
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            height: 100vh;
            overflow: hidden;
        }

        .left-navbar {
            width: 250px;
            height: 100vh;
            background-color: black;
            color: white;
            padding: 20px;
            text-align: center;
            position: fixed;
            left: 0;
            top: 0;
            bottom: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

            .left-navbar h4 {
                margin-bottom: 20px;
                border-bottom: 2px solid white;
                padding-bottom: 10px;
                font-size: 22px;
            }

        .nav-link {
            color: white;
            display: block;
            padding: 12px;
            width: 100%;
            text-align: left;
            text-decoration: none;
            transition: 0.3s;
            border-radius: 5px;
        }

            .nav-link:hover {
                background-color: #333;
                padding-left: 15px;
            }

        .content {
            flex: 1;
            margin-left: 270px;
            padding: 40px;
            color: black;
        }

        .form-container {
            max-width: 500px;
            margin: 50px auto;
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .form-control {
            border-radius: 5px;
        }

        .btn-success {
            width: 100%;
            border-radius: 5px;
        }

        .alert-success, .alert-danger {
            text-align: center;
        }
    </style>
</head>
<body>

    <!-- Sidebar Navbar (Fixed Left) -->
    <div class="left-navbar">
        <h4>Navigation</h4>
        <a href="/CrudTable/AddPaymentforStudent" class="nav-link">Add Payment</a>
        <a href="/Routine/ManageRoutine" class="nav-link">📅Student Routine</a>
        <a href="/CrudTable/AddDept" class="nav-link">AddDept</a>
        <a href="/CrudTable/DepartmentList" class="nav-link">DepartmentList</a>
        <a href="/User/nextPage?UserListnow=Student" class="nav-link"><< Back</a>
        <a href="/User/Student" class="nav-link"><< Back To List</a>
    </div>

    <!-- Main Content -->
    <div class="content">
        <div class="container">
            <div class="form-container">
                <h3 class="text-center mb-4">Dept Add</h3>

                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-success">@ViewBag.Message</div>
                }
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger">@ViewBag.Error</div>
                }

                <form asp-action="AddDeptAdd" asp-controller="CrudTable" method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label class="form-label">Details</label>
                        <input type="text" name="deptname" class="form-control" placeholder="Enter Dept" required>
                    </div>

                    <button type="submit" class="btn btn-success">Add</button>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>