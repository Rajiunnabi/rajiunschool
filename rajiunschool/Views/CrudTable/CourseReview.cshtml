@model List<teacherevaluationextend>

<style>
    .container {
        margin-top: 50px;
        position: relative;
    }

    .top-right-btn {
        position: absolute;
        top: 0;
        right: 0;
        margin: 10px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        padding: 10px;
        border: 1px solid #ddd;
        text-align: center;
    }

    th {
        background-color: #007bff;
        color: white;
    }

    .btn-danger, .btn-primary {
        padding: 5px 10px;
        text-decoration: none;
        color: white;
        border-radius: 5px;
    }

    .btn-danger {
        background-color: red;
    }

    .btn-primary {
        background-color: #007bff;
    }

    .search-container {
        display: flex;
        justify-content: space-between;
        margin-bottom: 20px;
    }

    .search-input {
        width: 300px;
        padding: 8px;
        border: 1px solid #ddd;
        border-radius: 5px;
    }

    .search-button {
        padding: 8px 15px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

        .search-button:hover {
            background-color: #0056b3;
        }

    .reset-button {
        padding: 8px 15px;
        background-color: gray;
        color: white;
        border: none;
        border-radius: 5px;
        text-decoration: none;
        margin-left: 10px;
    }

        .reset-button:hover {
            background-color: darkgray;
        }

    /* Modal Styles */
    #detailsModal {
        display: none;
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        z-index: 1000;
    }

    #overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        z-index: 999;
    }
</style>

<div class="container">
    <h2 class="text-center mb-4">Course Review</h2>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Subject ID</th>
                <th>Subject Name</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var coursereview in Model)
            {
                <tr>
                    <td>@coursereview.subjectid</td>
                    <td>@coursereview.subjectname</td>
                    <td>
                        <button class="btn-details" onclick="openModal('@coursereview.details')">
                            View Details
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Modal -->
<div id="detailsModal">
    <h3>Details</h3>
    <p id="modal-body"></p>
    <button onclick="closeModal()">Close</button>
</div>

<!-- Overlay -->
<div id="overlay"></div>

<script>
    function openModal(details) {
        // Display the details in the modal
        document.getElementById('modal-body').innerText = details;
        document.getElementById('detailsModal').style.display = 'block';
        document.getElementById('overlay').style.display = 'block';
    }

    function closeModal() {
        // Hide the modal and overlay
        document.getElementById('detailsModal').style.display = 'none';
        document.getElementById('overlay').style.display = 'none';
    }
</script>