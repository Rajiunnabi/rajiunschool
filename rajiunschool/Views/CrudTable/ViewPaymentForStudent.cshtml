@model List<paymentviewforstudent>

<style>
    .container {
        margin-top: 50px;
        position: relative;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        padding: 10px;
        border: 1px solid #ddd;
        text-align: center;
    }

    th {
        background-color: #007bff;
        color: white;
    }

    .btn-details {
        padding: 5px 10px;
        text-decoration: none;
        color: white;
        background-color: #28a745;
        border-radius: 5px;
        font-size: 12px;
        cursor: pointer;
    }

    .search-container {
        display: flex;
        justify-content: space-between;
        margin-bottom: 20px;
    }

    .search-input {
        width: 300px;
        padding: 8px;
        border: 1px solid #ddd;
        border-radius: 5px;
    }

    .search-button {
        padding: 8px 15px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

        .search-button:hover {
            background-color: #0056b3;
        }

    .reset-button {
        padding: 8px 15px;
        background-color: gray;
        color: white;
        border: none;
        border-radius: 5px;
        text-decoration: none;
        margin-left: 10px;
    }

        .reset-button:hover {
            background-color: darkgray;
        }

    .btn-details:hover {
        background-color: #218838;
    }

    /* Modal Styling */
    .modal {
        display: none;
        position: fixed;
        z-index: 1000;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: rgba(0, 0, 0, 0.6);
        backdrop-filter: blur(5px);
        transition: opacity 0.3s ease-in-out;
    }

    .modal-content {
        background-color: #fff;
        margin: 10% auto;
        padding: 25px;
        border: none;
        border-radius: 15px;
        width: 50%;
        max-width: 600px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
        transform: scale(0.9); 
        opacity: 0;
        transition: transform 0.3s ease-in-out, opacity 0.3s ease-in-out; 
    }

    .modal.show .modal-content {
        transform: scale(1); 
        opacity: 1; 
    }

    .modal-title {
        font-size: 24px;
        font-weight: bold;
        color: #007bff;
        margin-bottom: 20px;
        text-align: center;
    }

    .modal-body {
        font-size: 16px;
        color: #333;
    }

    .modal-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 15px;
    }

        .modal-table th,
        .modal-table td {
            padding: 12px;
            border-bottom: 1px solid #eee;
            text-align: left;
        }

        .modal-table th {
            background-color: #f8f9fa;
            color: #555;
            font-weight: 600;
        }

        .modal-table td {
            color: #333;
        }

    .close {
        color: #aaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
        cursor: pointer;
        transition: color 0.2s ease-in-out;
    }

        .close:hover {
            color: #000;
        }
</style>

<div class="container">
    <h2 class="text-center mb-4">Payment List</h2>

    <!-- Search Bar -->
    <div class="search-container">
        <form method="get" action="@Url.Action("ViewPayment", "CrudTable")">
            <input type="text" name="searchQuery" class="search-input" placeholder="Search by Subject ID or Name" />
            <button type="submit" class="search-button">Search</button>
            <a href="@Url.Action("ViewPayment", "CrudTable")" class="reset-button">Reset</a>
        </form>
    </div>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Session</th>
                <th>Transaction ID</th>
                <th>Payment Status</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var studentinfo in Model)
            {
                <tr>
                    <td>@studentinfo.session</td>
                    <td>@studentinfo.transictionid</td>
                    <td>@studentinfo.status</td>
                    <td>
                        <button class="btn-details" onclick="openModal('@studentinfo.hudao', '@studentinfo.studentid',
                                '@studentinfo.punishmentfee', '@studentinfo.transictionid',
                                '@studentinfo.status', '@studentinfo.tutionfee',
                                '@studentinfo.addmissionfee', '@studentinfo.transportationfee',
                                '@studentinfo.session')">
                            View Details
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Modal Structure -->
<div id="paymentModal" class="modal">
    <div class="modal-content">
        <span class="close" onclick="closeModal()">&times;</span>
        <h3 class="modal-title">Payment Details</h3>
        <div class="modal-body">
            <table class="modal-table">
                <tr>
                    <th>Student ID</th>
                    <td id="modal-studentid"></td>
                </tr>
                <tr>
                    <th>Punishment Fee</th>
                    <td id="modal-punishmentfee"></td>
                </tr>
                <tr>
                    <th>Transaction ID</th>
                    <td id="modal-transictionid"></td>
                </tr>
                <tr>
                    <th>Status</th>
                    <td id="modal-status"></td>
                </tr>
                <tr>
                    <th>Tuition Fee</th>
                    <td id="modal-tutionfee"></td>
                </tr>
                <tr>
                    <th>Admission Fee</th>
                    <td id="modal-addmissionfee"></td>
                </tr>
                <tr>
                    <th>Transportation Fee</th>
                    <td id="modal-transportationfee"></td>
                </tr>
                <tr>
                    <th>Session</th>
                    <td id="modal-session"></td>
                </tr>
            </table>
        </div>
    </div>
</div>

<script>
        function openModal(hudao, studentid, punishmentfee, transictionid, status, tutionfee, addmissionfee, transportationfee, session) {
        const modal = document.getElementById("paymentModal");
        modal.classList.add("show"); 
        modal.style.display = "block";

        
        document.getElementById("modal-studentid").innerText = studentid;
        document.getElementById("modal-punishmentfee").innerText = punishmentfee;
        document.getElementById("modal-transictionid").innerText = transictionid;
        document.getElementById("modal-status").innerText = status;
        document.getElementById("modal-tutionfee").innerText = tutionfee;
        document.getElementById("modal-addmissionfee").innerText = addmissionfee;
        document.getElementById("modal-transportationfee").innerText = transportationfee;
        document.getElementById("modal-session").innerText = session;
    }

    function closeModal() {
        const modal = document.getElementById("paymentModal");
        modal.classList.remove("show"); // Remove the "show" class to trigger the transition
        setTimeout(() => {
            modal.style.display = "none"; // Hide the modal after the transition
        }, 300); // Match the duration of the transition
    }
</script>