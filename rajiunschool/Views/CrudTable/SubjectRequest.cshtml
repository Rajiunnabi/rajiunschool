@model List<subjectrequestextend>

<style>
    .container {
        margin-top: 50px;
        position: relative;
    }

    .top-right-btn {
        position: absolute;
        top: 0;
        right: 0;
        margin: 10px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        padding: 10px;
        border: 1px solid #ddd;
        text-align: center;
    }

    th {
        background-color: #007bff;
        color: white;
    }

    .btn-danger, .btn-primary {
        padding: 5px 10px;
        text-decoration: none;
        color: white;
        border-radius: 5px;
    }

    .btn-danger {
        background-color: red;
    }

    .btn-primary {
        background-color: #007bff;
    }
</style>

<div class="container">

    <h2 class="text-center mb-4">User List</h2>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Subject ID</th>
                <th>Subject Name</th>
                <th>Department</th>
                <th>Semester</th>
                <th>Instructor</th>
                <th>View Profile</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var subjectrequest in Model)
            {
                <tr>
                    <td>@subjectrequest.subject.id</td>
                    <td>@subjectrequest.subject.subjectname</td>
                    <td>@subjectrequest.subject.dept</td>
                    <td>@subjectrequest.subject.semester</td>
                    <td>@subjectrequest.id</td>
                    <td>
                        <a href="@Url.Action("Details", "User", new { id = subjectrequest.id })" class="btn btn-primary">View Profile</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


